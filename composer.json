{
	"name": "timnarr/kirby-sanitize-filenames",
	"description": "This plugin provides filename sanitizing by using file hooks.",
	"type": "kirby-plugin",
	"version": "0.2.0",
	"license": "MIT",
	"homepage": "https://github.com/timnarr/kirby-sanitize-filenames",
	"authors": [
		{
			"name": "Tim Narr",
			"email": "hallo@tim-narr.com"
		}
	],
	"require": {
		"php": ">=8.0.0",
		"getkirby/composer-installer": "^1.1"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3"
	},
	"scripts": {
		"lint": ["php-cs-fixer fix --dry-run --diff"],
		"lint:fix": ["php-cs-fixer fix"]
	},
	"autoload": {
		"psr-4": {
			"timnarr\\": "src/"
		}
	},
	"config": {
		"optimize-autoloader": true,
		"allow-plugins": {
			"getkirby/composer-installer": true
		}
	}
}
